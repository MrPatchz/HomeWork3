<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Monthly Payment" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.783,3.974" Margin="142,150,0,0"/>
        <TextBox x:Name="inMonthly" HorizontalAlignment="Left" Height="23" Margin="250,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Outstanding Balance" HorizontalAlignment="Left" Margin="125,182,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="outBalance" HorizontalAlignment="Left" Height="23" Margin="250,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="calculate" Content="Calculate Interest &amp; Principle" HorizontalAlignment="Left" Margin="166,250,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="-0.077,0.093" Click="calculate_Click"/>

    </Grid>
</Window>
